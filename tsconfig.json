{
  "compilerOptions": {
    "target": "ES2021",
    "outDir": "./.ts-built",
    "noEmit": false,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
  },
  "exclude": [".ts-built", "src/js/bundle"]
}
